<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     app:cardMaxElevation="2dp"
     android:clickable="true"
     android:elevation="@dimen/cardElevation"
     android:padding="@dimen/parentMargin"
     android:stateListAnimator="@anim/state_list_anim"
     app:cardBackgroundColor="?attr/colorSurface"
     android:focusable="true"
     android:foreground="?android:attr/selectableItemBackground"
     android:layout_marginBottom="@dimen/parentMargin"
     android:layout_marginHorizontal="@dimen/parentMargin"
     style="@style/Widget.Material3.CardView.Filled"
     app:cardCornerRadius="@dimen/cardCornerRadius">

    <RelativeLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginHorizontal="@dimen/parentMargin"
         android:padding="@dimen/parentMargin">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginBottom="8dp"
             android:drawablePadding="4dp"
             android:textAppearance="@style/TextAppearanceTitle"
             android:drawableStart="@drawable/ic_chart"
             android:layout_alignParentStart="true"
             android:layout_alignParentTop="true"
             android:id="@+id/tv_chart_title"
             android:text="@string/wear_level_history" />

        <ImageButton
             android:layout_height="24dp"
             android:layout_width="24dp"
             android:src="@drawable/ic_report"
             android:scaleType="centerInside"
             android:background="?attr/selectableItemBackgroundBorderless"
             app:tint="?attr/colorError"
             android:layout_alignParentEnd="true"
             android:layout_alignParentTop="true"
             android:id="@+id/btn_reports" />

        <com.github.mikephil.charting.charts.LineChart
             android:layout_height="200dp"
             android:layout_width="match_parent"
             android:layout_below="@id/tv_chart_title"
             android:id="@+id/lineChart" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>