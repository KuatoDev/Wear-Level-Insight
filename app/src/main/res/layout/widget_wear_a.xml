<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
     android:layout_width="0dp"
     android:gravity="center"
     android:orientation="vertical"
     android:layout_weight="1"
     android:id="@+id/rl_a">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center"
         android:orientation="horizontal">

        <FrameLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/fl_1a">

            <ProgressBar
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:max="100"
                 android:indeterminate="false"
                 style="@android:style/Widget.ProgressBar.Horizontal"
                 android:progressDrawable="@drawable/widget_circular_progress"
                 android:id="@+id/wear_level_progress_1a"
                 android:layout_gravity="center" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:layout_gravity="center">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:visibility="gone"
                     android:textAppearance="@style/TextAppearanceBody"
                     android:text="0x01"
                     android:id="@+id/tv_hex_1_a"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textAppearance="@style/TextAppearanceBody"
                     android:text="10%"
                     android:id="@+id/tv_wear_level_percent_1a"
                     android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_margin="4dp"
             android:id="@+id/fl_2a">

            <ProgressBar
                 android:layout_height="48dp"
                 android:layout_width="48dp"
                 android:max="100"
                 android:indeterminate="false"
                 style="@android:style/Widget.ProgressBar.Horizontal"
                 android:progressDrawable="@drawable/widget_circular_progress"
                 android:id="@+id/wear_level_progress_2a"
                 android:layout_gravity="center" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:layout_gravity="center">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:visibility="gone"
                     android:textAppearance="@style/TextAppearanceBody"
                     android:text="0x0B"
                     android:id="@+id/tv_hex_2_a"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textAppearance="@style/TextAppearanceBody"
                     android:text="Life"
                     android:id="@+id/tv_wear_level_percent_2a"
                     android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center"
         android:orientation="vertical">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:ellipsize="marquee"
             android:textSize="12sp"
             android:singleLine="true"
             android:textColor="@android:color/white"
             android:text="Pre-EOL"
             android:id="@+id/tv_wear_level_title_a"
             android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>