<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:gravity="center"
     android:orientation="vertical"
     android:layout_weight="1"
     android:id="@+id/rl_b">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center"
         android:orientation="horizontal">

        <FrameLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/fl_1b">

            <ProgressBar
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:max="100"
                 android:indeterminate="false"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:progressDrawable="@drawable/widget_circular_progress"
                 android:id="@+id/wear_level_progress_1b"
                 android:layout_gravity="center" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:layout_gravity="center">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:visibility="gone"
                     android:textAppearance="@style/TextAppearanceBody"
                     android:textSize="12sp"
                     tools:text="0x01"
                     android:id="@+id/tv_hex_1_b"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textAppearance="@style/TextAppearanceBody"
                     android:textSize="10sp"
                     tools:text="10%"
                     android:id="@+id/tv_wear_level_percent_1b" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_margin="4dp"
             android:id="@+id/fl_2b">

            <ProgressBar
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:max="100"
                 android:indeterminate="false"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:progressDrawable="@drawable/widget_circular_progress"
                 android:id="@+id/wear_level_progress_2b"
                 android:layout_gravity="center" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:layout_gravity="center">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:visibility="gone"
                     android:textAppearance="@style/TextAppearanceBody"
                     android:textSize="12sp"
                     tools:text="0x0B"
                     android:id="@+id/tv_hex_2_b"
                     android:textStyle="bold" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textAppearance="@style/TextAppearanceBody"
                     android:textSize="10sp"
                     tools:text="Life"
                     android:id="@+id/tv_wear_level_percent_2b" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center"
         android:orientation="vertical">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textAppearance="@style/TextAppearanceBody"
             android:ellipsize="marquee"
             android:singleLine="true"
             tools:text="Pre-EOL"
             android:id="@+id/tv_wear_level_title_b"
             android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>